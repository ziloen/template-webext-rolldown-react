{
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "node --env-file=.env scripts/rolldown.js",
    "dev:vite": "vite build --watch",
    "dev:firefox": "node --env-file=.env --env-file=.env.firefox scripts/rolldown.js",
    "build": "node --env-file=.env.prod scripts/rolldown.js && web-ext build -s dist/chrome -n chrome.zip",
    "build:vite": "vite build",
    "build:firefox": "node --env-file=.env.prod --env-file=.env.firefox scripts/rolldown.js && web-ext build -s dist/firefox -n firefox.xpi",
    "start:chromium": "web-ext run -t chromium",
    "start:firefox": "web-ext run -t firefox-desktop",
    "typecheck": "tsgo -b --noEmit",
    "lint": "eslint .",
    "format": "prettier --write .",
    "init:playwright": "playwright install chromium --with-deps",
    "test:playwright": "playwright test"
  },
  "dependencies": {
    "@base-ui/react": "1.1.0",
    "axios": "1.13.5",
    "clsx": "2.1.1",
    "es-toolkit": "1.44.0",
    "i18next": "25.8.4",
    "motion": "12.34.0",
    "react": "19.2.4",
    "react-dom": "19.2.4",
    "react-i18next": "16.5.4",
    "rxjs": "8.0.0-alpha.14",
    "serialize-error": "13.0.1",
    "typed-webext": "0.7.10",
    "uuid": "13.0.0",
    "webextension-polyfill": "0.12.0",
    "zod": "4.3.6"
  },
  "devDependencies": {
    "@babel/core": "7.29.0",
    "@babel/preset-env": "7.29.0",
    "@babel/preset-react": "7.28.5",
    "@babel/preset-typescript": "7.28.5",
    "@fontsource-variable/fira-code": "5.2.7",
    "@fontsource-variable/noto-sans-sc": "5.2.10",
    "@playwright/test": "1.58.2",
    "@prettier/plugin-oxc": "0.1.3",
    "@rollup/plugin-babel": "6.1.0",
    "@svgr/core": "8.1.0",
    "@svgr/plugin-jsx": "8.1.0",
    "@tailwindcss/postcss": "4.1.18",
    "@tailwindcss/vite": "4.1.18",
    "@types/babel__core": "7.20.5",
    "@types/babel__preset-env": "7.10.0",
    "@types/chrome": "0.1.36",
    "@types/fs-extra": "11.0.4",
    "@types/node": "24.10.9",
    "@types/react": "19.2.13",
    "@types/react-dom": "19.2.3",
    "@types/webextension-polyfill": "0.12.4",
    "@typescript/native-preview": "7.0.0-dev.20260209.1",
    "@vitejs/plugin-react": "5.1.3",
    "@ziloen/eslint-config": "0.1.77",
    "@ziloen/tailwind-config": "2.0.18",
    "babel-plugin-annotate-module-pure": "1.0.4",
    "browserslist-to-esbuild": "2.1.1",
    "chokidar": "5.0.0",
    "core-js": "3.48.0",
    "cross-env": "10.1.0",
    "eslint": "9.39.2",
    "fs-extra": "11.3.3",
    "playwright": "1.58.2",
    "postcss-preset-env": "11.1.3",
    "prettier": "3.8.1",
    "prettier-plugin-organize-imports": "4.3.0",
    "prettier-plugin-tailwindcss": "0.7.2",
    "rolldown": "1.0.0-rc.3",
    "rollup-plugin-copy": "3.5.0",
    "sass": "1.97.3",
    "sonda": "0.10.2",
    "svgo": "4.0.0",
    "tailwindcss": "4.1.18",
    "ts-lib-enhance": "1.0.22",
    "typescript": "5.9.3",
    "unplugin": "3.0.0",
    "vite": "8.0.0-beta.9",
    "web-ext": "9.2.0"
  },
  "webExt": {
    "artifactsDir": "dist",
    "run": {
      "browserConsole": false,
      "target": [
        "firefox-desktop"
      ]
    },
    "build": {
      "overwriteDest": true,
      "filename": "extension.xpi"
    }
  },
  "overrides": {
    "vite": "$vite"
  }
}
